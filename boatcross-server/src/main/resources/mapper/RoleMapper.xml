<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kelystor.boatcross.dao.RoleMapper">
    <resultMap id="BaseResultMap" type="com.kelystor.boatcross.entity.Role">
    </resultMap>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
       INSERT INTO `role`(`role`, `name`, `description`, `create_by`, `create_time`)
       VALUES (#{role}, #{name}, #{description}, #{createBy}, now())
    </insert>

    <select id="findRoleList" resultMap="BaseResultMap">
        SELECT * FROM `role`
    </select>

    <delete id="delete" parameterType="java.util.List">
        DELETE FROM `role` where id IN
        <foreach collection="deleteRoleIds" item="item" index="index" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>
</mapper>